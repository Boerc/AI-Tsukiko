NODE_ENV=development

# Web dashboard
DASHBOARD_PORT=8181
HOST=0.0.0.0

# Storage
DATA_DIR=./data

# Google Cloud
GOOGLE_PROJECT_ID=your-project-id
GOOGLE_LOCATION=us-central1
# Path to your service account JSON key file
GOOGLE_APPLICATION_CREDENTIALS=/absolute/path/to/key.json

# Discord
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_GUILD_ID=optional-guild-id

# Twitch
TWITCH_USERNAME=your-twitch-bot-username
TWITCH_OAUTH=oauth:your-oauth-token
TWITCH_CHANNELS=yourchannel,anotherchannel
TWITCH_CLIENT_ID=your-twitch-client-id
TWITCH_ACCESS_TOKEN=app-or-user-access-token
TWITCH_BROADCASTER_ID=12345678

# OBS
OBS_HOST=localhost
OBS_PORT=4455
OBS_PASSWORD=your-obs-websocket-password

# VTube Studio
VTS_HOST=localhost
VTS_PORT=8001
VTS_PLUGIN_NAME=TsukikoAI
VTS_PLUGIN_AUTHOR=You
VTS_PLUGIN_ICON_URL=https://example.com/icon.png
VTS_AUTH_TOKEN=

# Personality / Filters (defaults; editable via dashboard)
PERSONALITY_PRESET=default
PROFANITY_LEVEL=medium

# Dashboard security
DASHBOARD_API_KEY=
RATE_LIMIT_PER_MIN=240
